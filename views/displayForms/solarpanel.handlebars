<div class="jumbotron text-center" style="margin-top: 5%">
  <h2>Classify a Solar Panel</h2>
  <hr>
  <div class="row">
    <div class="col-sm">
      <img src="{{imgPath}}" style="height: 100%; width: 100%; object-fit: contain">
    </div>
    <div style="outline: 2px solid black" class="col-sm">
      <br />
      <h5>Classify Image</h5>
      <hr>
      <form action="/displayForms/solarpanel/" method="post">
        <div class="form-check">
          <h3>Is there a solar panel in this picture?</h3>
          <br>
          <div class="form-check">
            <input type="submit" class="btn btn-success" value="true" id="SolarPanelPresent" name="solarPanel">
            <input type="submit" class="btn btn-danger" value="false" id="noSolarPanel" name="noSolarPanel">
          </div>
          <br>
      </form>
    </div>
  </div>
</div>